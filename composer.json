{
    "name": "imprimeindo/sistema-impresion-qr",
    "type": "project",
    "description": "Sistema moderno de impresi贸n con c贸digos QR para gesti贸n eficiente de trabajos de impresi贸n",
    "keywords": [
        "laravel",
        "printing",
        "qr-code",
        "mongodb",
        "print-management",
        "queue-system"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Imprimeindo Team",
            "email": "dev@imprimeindo.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.9",
        "laravel/tinker": "^2.9",
        "jenssegers/mongodb": "^4.3",
        "endroid/qr-code": "^5.0",
        "intervention/image": "^3.7",
        "spatie/laravel-permission": "^6.9",
        "barryvdh/laravel-dompdf": "^3.0",
        "maatwebsite/excel": "^3.1",
        "pusher/pusher-php-server": "^7.2"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0.1",
        "spatie/laravel-ignition": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "setup": [
            "@composer install",
            "@php artisan key:generate --ansi",
            "@php artisan migrate --seed --ansi",
            "@php artisan storage:link --ansi"
        ],
        "fresh": [
            "@php artisan migrate:fresh --seed --ansi",
            "@php artisan cache:clear --ansi",
            "@php artisan config:clear --ansi",
            "@php artisan route:clear --ansi",
            "@php artisan view:clear --ansi"
        ],
        "test": [
            "@php artisan test"
        ],
        "test-coverage": [
            "@php artisan test --coverage"
        ],
        "lint": [
            "./vendor/bin/pint"
        ],
        "analyze": [
            "./vendor/bin/phpstan analyse"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
