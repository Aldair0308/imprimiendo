# Configuración de la aplicación Imprimeindo
APP_NAME="Imprimeindo"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Configuración de la base de datos MongoDB
DB_CONNECTION=mongodb
DB_HOST=127.0.0.1
DB_PORT=27017
DB_DATABASE=imprimeindo
DB_USERNAME=
DB_PASSWORD=

# Configuración de caché
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# Configuración de correo
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuración específica de Imprimeindo

# Sistema de impresión
PRINTER_DEFAULT_TIMEOUT=30
PRINTER_MAX_RETRIES=3
PRINTER_QUEUE_REFRESH_INTERVAL=5
PRINTER_STATUS_CHECK_INTERVAL=10

# Configuración de sesiones QR
QR_SESSION_DURATION=1800
QR_REFRESH_INTERVAL=30
QR_IMAGE_SIZE=256
QR_ERROR_CORRECTION=M

# Configuración de archivos
FILE_MAX_SIZE=10485760
FILE_ALLOWED_TYPES="pdf,doc,docx,txt,jpg,jpeg,png"
FILE_STORAGE_PATH=storage/app/uploads
FILE_CLEANUP_INTERVAL=3600
FILE_RETENTION_DAYS=7

# Configuración de administración
ADMIN_SESSION_DURATION=7200
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=900

# Configuración de monitoreo
MONITORING_ENABLED=true
MONITORING_INTERVAL=5
MONITORING_ALERT_THRESHOLD=10

# Configuración de balanceador de carga
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK=true
LOAD_BALANCER_RETRY_FAILED=true

# Configuración de notificaciones
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_EMAIL=false
NOTIFICATIONS_SLACK=false
NOTIFICATIONS_WEBHOOK_URL=

# Configuración de seguridad
SECURITY_RATE_LIMIT=60
SECURITY_CSRF_PROTECTION=true
SECURITY_XSS_PROTECTION=true

# Configuración de desarrollo
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"